#include <stdio.h>

// Function to find the index where the array can be split into two parts with equal sum
int find_split_index(int arr[], int n) {
    int total_sum = 0;
    for (int i = 0; i < n; i++) {
        total_sum += arr[i];
    }
    int left_sum = 0;
    for (int i = 0; i < n; i++) {
        total_sum -= arr[i];
        if (left_sum == total_sum) {
            return i;
        }
        left_sum += arr[i];
    }
    return -1;
}

int main() {
    int T;
    int y;
    scanf("%d", &T);
    while (T--) {
        int N;
        scanf("%d", &N);
        int arr[N];
        for (int i = 0; i < N; i++) {
            scanf("%d", &arr[i]);
        }
        int result = find_split_index(arr, N);
        printf("%d\n", result);
    }
    return 0;
}
